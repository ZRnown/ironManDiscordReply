      "target_channels": [123456789012345678],
      "delay_min": 3.0,
      "delay_max": 7.0,
      "is_active": true,
      "exclude_keywords": []
    },
    {
      "keywords": "^help$",
      "reply": "我可以帮您自动回复消息！输入关键词即可触发回复。",
      "match_type": "regex",
      "target_channels": [],
